!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang'=>"en", :lang=>"en" }
  %head
    %meta{ 'http-equiv' => "content-type", :content => "text/html;charset=utf-8" }
    = csrf_meta_tag
    %link{ :rel => "shortcut icon", :href => "/favicon.ico" }
    %title SriCoop
    = include_stylesheets :sessions
    = sprockets_include_tag :public

  %body{ :class => "#{location_name} #{I18n.locale} #{Rails.env}"}
    .container
      .wrapper
        .content
          - show_flash
          = yield
        .column
          #sidebar
            = image_tag 'sr_logo_silver.png', :alt => 'SriCoop logo', :style => 'width:200px;'
            = yield :column
      .footer
        %p.copyright Copyright &copy; 2014 SriCoop. All rights reserved

